general {
    colors = true
    interval = 5
}

order += "memory"
order += "volume master"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"

memory {
    format = "%used"
    threshold_degraded = "1G"
    format_degraded = "MEMORY < %available"
}

wireless _first_ {
    format_up = "%essid"
    format_down = "WiFi down"
}

battery 0 {
    format = "%status %percentage"
    format_down = "No battery"
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 10
    threshold_type = "percentage"
    status_chr = "CHR"
    status_bat = "BAT"
    status_unk = "UNK"
    status_full = "FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
}

volume master {
    format = "â™ª: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

tztime local {
    format = "%H:%M :: %m-%d-%Y"
}
